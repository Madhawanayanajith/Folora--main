<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <include
        android:id="@+id/settings_toolbar"
        layout="@layout/app_bar_layout"/>

    <LinearLayout
        android:id="@+id/propic"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        android:layout_height="wrap_content">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/set_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/p"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/colorPrimary"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:tint="@color/cardview_dark_background"
        android:layout_marginLeft="-48dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/baseline_add_box_24"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/username_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/propic"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/blue_border_rounded_cornwe">

    <EditText
        android:id="@+id/set_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img24"
        android:background="@android:color/transparent"
        android:hint="Enter Your Name"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"

        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="17dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="12sp">



    </EditText>
        <ImageView
            android:id="@+id/img24"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:src="@drawable/baseline_account_circle_24"
            app:tint="@color/teal_200" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_input"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/blue_border_rounded_cornwe">

        <ImageView
            android:id="@+id/img21"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:src="@drawable/baseline_add_location_24"
            app:tint="@color/teal_200" />

        <AutoCompleteTextView
            android:id="@+id/set_profile_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img21"
            android:background="@android:color/transparent"
            android:hint="Enter Your City or Town"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="17dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="12sp">



        </AutoCompleteTextView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/blue_border_rounded_cornwe">

        <ImageView
            android:id="@+id/img25"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:src="@drawable/baseline_phone_24"
            app:tint="@color/teal_200" />

        <EditText
            android:id="@+id/set_profile_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img25"
            android:background="@android:color/transparent"
            android:hint="Enter Your phone number"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:inputType="phone"
            android:maxLines="1"
            android:maxLength="10"
            android:paddingLeft="17dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="12sp">



        </EditText>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nic"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/blue_border_rounded_cornwe">

        <ImageView
            android:id="@+id/img26"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:src="@drawable/baseline_account_box_24"
            app:tint="@color/teal_200" />

        <EditText
            android:id="@+id/set_profile_nic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img26"
            android:background="@android:color/transparent"
            android:hint="Enter Your NIC number"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="17dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="12sp">



        </EditText>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/blue_border_rounded_cornwe">



        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dropdown" />

    </RelativeLayout>




    <Button
        android:id="@+id/update_settings_button"
        android:layout_below="@id/category"
        android:inputType="textMultiLine"
        android:text="Update Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:background="@drawable/blue_fill__rounded_color"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:padding="6dp">

    </Button>
</RelativeLayout>