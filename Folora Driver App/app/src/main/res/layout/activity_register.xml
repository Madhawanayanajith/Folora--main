<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/logo_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/logo"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/register_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register with Æ’olora | Driver"
                android:textColor="@color/teal_200"
                android:fontFamily="@font/poppins_b"
                android:textSize="20sp"
                android:layout_below="@id/logo_image"
                android:layout_centerHorizontal="true"
                />


            <RelativeLayout
                android:id="@+id/username_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_text"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/blue_border_rounded_cornwe">

                <!-- INPUT -->
                <EditText
                    android:id="@+id/register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img22"
                    android:background="@android:color/transparent"
                    android:hint="Enter Email Address"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:paddingLeft="17dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="12sp" />

                <!-- ICON -->
                <ImageView
                    android:id="@+id/img22"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/baseline_email_24"
                    app:tint="@color/teal_200" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/password_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username_input"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                android:layout_marginTop="12dp"
                android:background="@drawable/blue_border_rounded_cornwe">

                <!-- INPUT -->
                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img21"
                    android:background="@android:color/transparent"
                    android:hint="Enter Your Password"
                    android:inputType="textPassword"
                    android:layout_marginRight="52dp"
                    android:maxLines="1"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"

                    android:paddingLeft="17dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="12sp" />

                <!-- ICON -->
                <ImageView
                    android:id="@+id/img21"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/baseline_lock_24"
                    app:tint="@color/teal_200" />

                <ImageView
                    android:id="@+id/showpass"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/baseline_visibility_off_24"
                    app:tint="@color/teal_200" />

            </RelativeLayout>


            <Button
                android:id="@+id/register_button"
                android:layout_below="@id/password_input"
                android:padding="4dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:background="@drawable/blue_fill__rounded_color"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/already_have_account_link"
                android:layout_below="@id/register_button"
                android:text="Login ?"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
            </TextView>


        </RelativeLayout>





    </ScrollView>
</RelativeLayout>