<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_intro"
        android:layout_marginTop="16dp"
        android:src="@drawable/intro01"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="350dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_b"
        android:text="Find Your Taxi"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/af"
        android:text="Choose your Taxi, plan your trip. \nPick the best Driver to your Trip"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>