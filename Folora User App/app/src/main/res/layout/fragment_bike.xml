<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BikeFragment">

    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:background="@android:color/white"
        android:padding="8dp">



        <AutoCompleteTextView
            android:id="@+id/txt_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Select Town"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:background="@null"
            android:inputType="text"/>

        <ImageView
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_search_24"
            android:background="@color/teal_200"
            android:padding="10dp"
            android:tint="@color/white"
            android:contentDescription="search"/>

        <ImageView
            android:id="@+id/refresh_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:tint="@color/white"
            android:layout_marginLeft="5dp"
            android:background="@color/teal_700"
            android:src="@drawable/baseline_view_list_24"
            android:contentDescription="clear"/>
    </LinearLayout>


    <TextView
        android:id="@+id/maintext"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:textColor="#EFEFEF"
        android:fontFamily="@font/poppins_b"
        android:padding="20dp"

        android:textSize="25sp"
        android:text="Drivers can be found according to your city. Otherwise all driver information can be obtained by clicking the â‰£ button"
        android:textAlignment="center"

        android:layout_height="285dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/find_friends_recyclerlist"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/find_friends_toolbar" />


</FrameLayout>