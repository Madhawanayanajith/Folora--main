<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">
    
    <EditText
        android:id="@+id/phone_number_input"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="180dp"
        android:padding="10dp"
        android:hint="Enter phone number with country code"
        android:fontFamily="@font/poppins_b"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/verification_code_input"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
      android:layout_marginTop="10dp"
        android:padding="10dp"
        android:hint="Enter Verify Code"
        android:fontFamily="@font/poppins_b"
        android:textAllCaps="false"
        android:layout_below="@+id/phone_number_input"
        android:textSize="15dp"
        android:visibility="invisible"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
    <Button
        android:id="@+id/send_ver_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Verification Code"
        android:layout_below="@id/verification_code_input"
        android:fontFamily="@font/roboto"
        android:textAllCaps="false"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/blue_fill__rounded_color"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:layout_below="@id/send_ver_code_button"
        android:fontFamily="@font/roboto"
        android:textAllCaps="false"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:background="@drawable/blue_fill__rounded_color"
        android:textColor="@android:color/white"
        />

</RelativeLayout>